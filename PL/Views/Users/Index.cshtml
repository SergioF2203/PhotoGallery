@model IEnumerable<PL.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.UserViewModelName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UserViewModelEmail)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UserViewModelImagePath)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.UserViewModelName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserViewModelEmail)
				</td>
				<td>
					<div style="background-image: url(@item.UserViewModelImagePath); width:50px; height: 50px; background-position: center; background-size: cover; background-repeat: no-repeat;"
				</td>
				<td>
					@Html.ActionLink("Details", "Details", new { id=item.UserViewModelId }) |
					@Html.ActionLink("Delete", "Delete", new { id=item.UserViewModelId })
				</td>
			</tr>
		}

</table>
